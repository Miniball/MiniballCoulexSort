#ifndef ExpDefs_hh
#define ExpDefs_hh

// Mass and beam energy constants
# define AP 94. // Mass of projectile in u
# define ZP 37. // atomic number of projectile
# define EB 6200.0 // Beam energy in A.keV
# define EX 300.0 // Excitation energy (keV) after inelastic scattering = E(2+)

# define AT 208. // Mass of target in u
# define ZT 82 // atomic number of target
# define THICK 1.00  // target thickness in mg/cm^2
# define DEPTH 0.50  // depth of interaction

# define CDDIST 25.7	// distance between target and CD
# define DEADLAYER 0.7	// thickness of the Si dead layer in um

# define SPEDEDIST 23.6 // distance from target to SPEDE in mm

#endif
